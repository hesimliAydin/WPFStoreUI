<UserControl x:Class="WPFStoreUI.AdUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFStoreUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Margin="80">
            <Border Width="120"
                    Height="150"
                     Background="White"
                    BorderThickness="0"
                    CornerRadius="20"
                    x:Name="productBorder"/>
            <Border Width="50" Height="50" Canvas.Left="90" Canvas.Top="120" Background="White" BorderThickness="0" CornerRadius="20">

                <Border CornerRadius="20"
                    Background="White"
                    Width="30"
                    Height="40">
                    <Button Background="Transparent" Height="55" BorderThickness="0">
                        <Image   Source="/icons8-plus-48.png"/>
                    </Button>
                </Border>

            </Border>
        </Canvas>

    </Grid>
</UserControl>
